# 1st extruder module configuration
# ---------------------------------------------------------------------
extruder.BondtechQRLeft.enable               true              # Whether to activate the extruder module at all. All configuration is ignored if false
extruder.BondtechQRLeft.steps_per_mm         466               # TMC2208 -> 466 / TMC2100 -> 468 / RAPS128 -> 3680 / DRV8825 -> 916  # Steps per mm for extruder stepper
extruder.BondtechQRLeft.default_feed_rate    300               # Default rate ( mm/minute ) for moves where only the extruder moves
extruder.BondtechQRLeft.acceleration         3600              # Acceleration for the stepper motor, as of 0.6, arbitrary ratio
extruder.BondtechQRLeft.max_speed            30                # mm/s

